<Window x:Class="Desktop.Windows.W_DinamikKareOlusturma"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop.Windows"
        mc:Ignorable="d"
        Title="W_DinamikKareOlusturma" Height="450" Width="800" Background="Gray">
    <Grid>
        <Menu Height="23" VerticalAlignment="Top">
            <MenuItem x:Name="menuItem_CreateObject" Header="Yeni Nesne" Click="menuItem_CreateObject_Click" />
            <MenuItem x:Name="menuItem_BackgroundImageChangeObject" Header="Arka Planı Değiştir" Click="menuItem_BackgroundImageChangeObject_Click" />
            <MenuItem x:Name="menuItem_Save" Header="Değişiklikleri Kaydet" Click="menuItem_Save_Click" />
        </Menu>
        <Canvas x:Name="canvas" Margin="0, 23, 0, 0"  Background="Black" PreviewMouseMove="canvas_PreviewMouseMove" PreviewMouseLeftButtonUp="canvas_PreviewMouseLeftButtonUp">
        </Canvas>
    </Grid>
</Window>
