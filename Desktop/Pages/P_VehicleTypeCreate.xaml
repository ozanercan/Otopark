      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d"
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="P_VehicleTypeCreate" Foreground="White">

    <Grid>
        <Label Content="Tip Adı" HorizontalContentAlignment="Center" FontSize="20" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0 50 0 0" Foreground="{Binding Foreground, ElementName=page}" />
        <TextBox x:Name="textBox_Name" FontSize="20" VerticalAlignment="Top" Margin="0 90 0 0" Foreground="White" HorizontalAlignment="Center" Width="350" Background="{x:Null}" />
        <Button x:Name="button_Create" Content="Oluştur" HorizontalAlignment="Center" Margin="0,154,0,0" VerticalAlignment="Top" Width="150" Height="35" IsDefault="True" Click="button_Create_Click" Background="{x:Null}" BorderBrush="#FF0FFF00" Foreground="White" Cursor="Hand" />
    </Grid>
